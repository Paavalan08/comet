{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": [
      "node",
      "@types/node",
      "jsdom",
      "vite/client",
      "@vue/runtime-core"
    ]
  },
  "include": [
    "./**/*",
    "src/**/*",
    "tests/**/*",
    "cypress/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts" // Exclude test files from the main build
  ]
}
