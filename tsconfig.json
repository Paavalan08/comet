{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": [
      "node",
      "vite/client" // Includes Vite-specific types
    ]
  },
  "include": [
    "./**/*",
    "src/**/*",
    "tests/**/*",
    "cypress/**/*" // Include Cypress files
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts" // Exclude test files from the main build
  ]
}
